<div class=container>
  <div class="row">

    <% unless @cocktails.nil? %>
      <% @cocktails.each do |cocktail| %>
        <% if cocktail.photo.attached? %>
        <div class="col-12 col-md-6 col-lg-3">
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 100, width: 100%>')">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </div>
        </div>
        <% else %>
        <div class="col-12 col-md-6 col-lg-3">
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </div>
        </div>
        <% end %>
      <% end %>
    <% end %>

</div>
</div>