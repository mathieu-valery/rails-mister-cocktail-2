<div class='container'>
    <div class="add-margin-top">
        <h1><%= @cocktail.name %></h1>

        <% if @cocktail.photo.attached? %>
            <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400%>
        <% else%>
            <div class="empty-card"></div>
        <% end %>
    </div>
    
    <div class="row">
        <div class="add-margin-top col-sm-12 col-md-6">
            <h2>Recipe</h2>

            <table class="table">
                <tbody>
                    <thead>
                    <th>Ingredient</th>
                    <th>Quantity</th>
                    <th>Action</th>
                    </thead>
                    <% @doses.each do |dose| %>
                        <tr>
                            <td><%= dose.ingredient.name  %></td>
                            <td><%= dose.description %></td>
                            <td><%= link_to "Delete",
                                dose_path(dose),
                                method: :delete,
                                data: { confirm: "Are you sure?" }%></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>

    <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"%><br>
    <%= link_to 'Back to List', root_path %>

</div>